                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="text31"
                    android:textColor="@color/Black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtAvlBeds32"
                    android:layout_width="match_parent"
